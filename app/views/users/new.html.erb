<% provide :title, "Sign Up" %>
<form class="container">
  <h1 class="center"><%= t "users.signup" %></h1>
  <div class="form-group">
    <label><%= t "users.name" %></label>
    <input type="text" class="form-control"  placeholder= "<%= t "users.p1" %>">
  </div>
  <div class="form-group">
    <label><%= t "users.email" %></label>
    <input type="email" class="form-control"  placeholder="<%= t "users.p2" %>">
  </div>
  <div class="form-group">
    <label><%= t "users.password" %></label>
    <input type="password" class="form-control" placeholder="<%= t "users.p3" %>">
  </div>
  <div class="form-group">
    <label><%= t "users.confirm_password" %></label>
    <input type="password" class="form-control" placeholder="<%= t "users.p4" %>">
  </div>
  <button type="submit" class="btn btn-primary"><%= t "users.submit" %></button>
</form>

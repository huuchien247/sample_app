<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t( "static_pages.home"), root_path %></li>
        <li><%= link_to t( "static_pages.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t( "users.user"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "users.acc" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t( "users.pro"), current_user %></li>
              <li><%= link_to t( "users.set"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t( "users.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t( "static_pages.login"), login_path %></li>
        <% end %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown">
            <%= t "static_pages.language" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t( "static_pages.eng"), locale: :en %></li>
            <li><%= link_to t( "static_pages.vie"), locale: :vn %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
